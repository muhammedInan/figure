{% extends 'base.html.twig' %}

{% block body %}
<article>
    <h2>{{ figure.title }}</h2>
    <div class="metadata">Ecrit le {{ figure.createAt | date('d/m/Y')}}
        à {{ figure.createAt | date('H:i')}} dans la catégorie politique</div>
    <div class="content">
        <img src="{{ figure.image }}" alt="">
        {{ figure.content | raw }}
    </div>
</article>

    <section id="commentaires">
    {%  for comment in figure.comments %}
        <div class=comment">
            <div class="row">
                <div class="col-3">
                    {{ comment.author }} (<small>{{ comment.createdAt | date
                            ('d/m/Y à H:i')}}</small>
                </div>
                <div class="col">
                    {{ comment.content | raw}}
                </div>
            </div>

            </div>
    {% endfor %}
    </section>
{% endblock %}