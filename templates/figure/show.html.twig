{% extends 'base.html.twig' %}

{% block body %}
<article>
    <h2>{{ figure.title }}</h2>
    <div class="metadata">Ecrit le {{ figure.createAt | date('d/m/Y')}}
        à {{ figure.createAt | date('H:i')}} dans la catégorie politique {{ figure.category.title }}</div>
    <div class="content">
        <img src="{{ figure.image }}" alt="">
        {{ figure.content | raw }}
    </div>
</article>

    <section id="commentaires">
       <h1> {{ figure.comments | length   }}Commentaires</h1>
    {%  for comment in figure.comments %}
        <div class=comment">
            <div class="row">
                <div class="col-3">
                    {{ comment.author }} (<small>{{ comment.createdAt | date
                            ('d/m/Y à H:i')}}</small>
                </div>
                <div class="col">
                    {{ comment.content | raw}}
                </div>
            </div>

            </div>
    {% endfor %}

        {% if app.user %}
        {{ form_start(commentForm) }}
        {{ form_row(commentForm.author, {'attr': {'placeholder': "Votre nom"}}) }}
        {{ form_row(commentForm.content, {'attr': {'placeholder': "Votre commentaires"}}) }}

        <button type="submit" class="btn btn-success">Commenter !</button>
        {{ form_end(commentForm) }}

        {% else %}
         <h2> vous ne pouvez pas commenter si vous n'êtes pas connecté</h2>
        <a href="{{ path('security_login') }}" class="btn btn-primary">
            Connexion
        </a>
        {% endif %}
    </section>
{% endblock %}