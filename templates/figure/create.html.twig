{% extends 'base.html.twig' %}

{% form_theme formFigure 'bootstrap_4_layout.html.twig' %}

{% block body  %}

 <h1>Cr√©ation d'une figure</h1>

    {{  form_start(formFigure) }}

    {{ form_row(formFigure.title, {'attr': {'placeholder': "Titre de la figure"}}) }}
    {{ form_row(formFigure.content, {'attr': {'placeholder': "Contenu"}}) }}
    {{ form_row(formFigure.image, {'attr': {'placeholder': "URL de l'image"}}) }}

    <button type="submit" class="btn btn-success">
       {% if editMode %}
       Enregistrer les modifications
       {% else %}
       Ajouter la figure
       {% endif %}
    </button>


    {{ form_end(formFigure) }}



{% endblock %}